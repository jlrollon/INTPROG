@page
@model INTPROG.Models.RegisterModel
@{
    ViewData["Title"] = "Sign out";
}

@if (TempData["message"] != null)
{
    <div class="alertMessage bg-success text-light" id="alert" role="alert">
        @TempData["message"]
    </div>
}
<div class="container">
    <main>
        <header>
            <div>
                <div class="container d-flex justify-content-between align-items-center">
                    <div class="d-flex gap-3 fs-5 align-items-center">
                        <a asp-page="/Index">
                            <i class="fa-solid fa-house text-primary"></i>
                            <span>REALState</span>
                        </a>
                    </div>
                    <div class="signup-btn">
                        <button class="btn btn-primary rounded-pill text-light ps-4 pe-4" onclick="window.location.href='/login'">Log in</button>
                    </div>
                </div>
            </div>
        </header>
        <section>
            <div class="content d-flex align-items-center pt-5">
                <div class="col-4">
                    <div class="login-form">
                        <div class="d-flex flex-column gap-4">
                            <span class="fs-4">Welcome, Let's get started</span>
                            <form method="POST" onsubmit="return submitForm()">
                                <div class="d-flex flex-column gap-4">
                                    <div class="d-flex gap-2 flex-column">
                                        <label for="fullname">Full Name</label>
                                        <input asp-for="fullname" type="text" id="fullname" class="form-control p-2" placeholder="Your Name">
                                        <span asp-validation-for="fullname" class="text-danger"></span>
                                    </div>
                                    <div class="d-flex gap-2 flex-column">
                                        <label for="email">Enter your email address</label>
                                        <input asp-for="email" type="email" id="email" class="form-control p-2" placeholder="yourmail@gmail.com">
                                        <span asp-validation-for="email" class="text-danger"></span>
                                    </div>
                                    <div class="d-flex gap-2 flex-column">
                                        <label for="password">Enter your password</label>
                                        <input asp-for="password" type="password" class="form-control p-2" placeholder="Password">
                                        <span asp-validation-for="password" class="text-danger"></span>
                                    </div>
                                    <input type="submit" class="bg-primary form-control text-light fs-6 p-2" onclick="submit()" value="Sign up">
                                    <div class="text-center f-pass">
                                        <span>Already have an account?</span>
                                        <a asp-page="/login">Click here!</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-8">
                    <div class="d-flex align-items-center justify-content-end">
                        <img src="./images/signup_img.png" alt="image" width="700" height="700" />
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>

<script>
    setTimeout(function () {
        document.getElementById('alert').style.display = 'none';
    }, 2000);

    function submitForm() {
        document.getElementById('fullname').value = '';
        document.getElementById('email').value = '';
        return false; // Prevent form submission
    }
</script>
